{
	"pinVersions": false,
	"semanticCommits": true,
	"semanticPrefix": "build",
	"commitMessage": "{{semanticPrefix}} update {{depName}} to version {{newVersion}}",
	"separateMajorMinor": false,

	"packageRules": [
		{
			"paths": ["packages/nested/package.json"],
		
			"lockFileMaintenance": {
				"enabled": true,
				"gitFs": true,
				"schedule": [
					"every weekday"
				]
			}
		}
	],
	"baseBranches": [
		"master",
		"7.2.x"
	],
	"packageFiles": [
		"package.json",
		"packages/**/package.json"
	]
}