{
  "pinVersions": false,
  "semanticCommits": true,
  "semanticPrefix": "build",
  "separateMajorMinor": false,
  "labels": ["target: minor", "action: merge"],
  "timezone": "America/Tijuana",
  "baseBranches": ["master"],
  {
    "lockFileMaintenance": { "enabled": true, "schedule": "before 1pm on Tuesday" }
   },
  "ignoreDeps": ["@types/node", "quicktype-core"],
  "packageFiles": [
    "WORKSPACE",
    "package.json",
    "sub/package.json",
    "tests/legacy-cli/e2e/ng-snapshot/package.json"
  ],
  "packageRules": [
    {
      "packagePatterns": ["^@angular/.*"],
      "groupName": "angular",
      "pinVersions": false
    },
    {
      "packagePatterns": ["^@babel/.*"],
      "groupName": "babel",
      "pinVersions": false
    },
    {
      "packagePatterns": ["^@bazel/.*", "^build_bazel.*"],
      "groupName": "bazel",
      "pinVersions": false
    },
    {
      "packageNames": ["typescript"],
      "separateMinorPatch": true
    },
    {
      "packageNames": ["typescript"],
      "updateTypes": ["minor", "major"],
      "enabled": false
    },
    {
      "matchPaths": ["sub/package.json"],
      "matchPackagePatterns": ["*"],
      "lockFileMaintenance": { "enabled": false },
      "groupName": "all non-major dependencies-sub",
      "groupSlug": "all-minor-patch-sub"
    },
    {
      "matchPaths": ["!sub/package.json"],
      "excludePackagePatterns": ["^@angular/.*"],
      "matchPackagePatterns": ["*"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch"
    }
  ]
}
