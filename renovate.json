{
  "separateMajorMinor": false,
  "pinVersions": false,
  "semanticCommits": true,
  "baseBranches": [
    "master"
  ],
  "packageFiles": [
    "WORKSPACE",
    "package.json",
    "packages/**/package.json",
    "tests/legacy-cli/e2e/ng-snapshot/package.json"
  ],
  "packageRules": [
    {
      "packagePatterns": [
        "^@bazel\/.*",
        "^build_bazel.*",
        "bazel_toolchains"
      ],
      "groupName": "bazel",
      "pinVersions": false
    }
  ]
}
